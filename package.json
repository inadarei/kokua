{
  "name": "kokua",
  "version": "0.1.0",
  "description": "Hypermedia Representor Using Hyper+JSON",
  "author": "Irakli Nadareishvili",
  "license": "MIT",
  "main": "./lib/kokua.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/inadarei/kokua"
  },
  "engines": {
    "node": ">=6.1"
  },
  "dependencies": {
    "app-module-path": "^2.1.0",
    "bluebird": "^3.5.0",
    "lodash": "^4.3.0",
    "metalogger": "*"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "eslint": "^4.12.1",
    "nyc": "^11.3.0"
  },
  "scripts": {
    "lint": "eslint lib test",
    "test": "nyc ava test/**/*.js --verbose",
    "test-cov": "nyc --check-coverage report test/",
    "test:watch": "ava test/**/*.js --verbose --watch"
  },
  "nyc": {
    "per-file": true,
    "lines": [
      75,
      95
    ],
    "statements": [
      75,
      95
    ],
    "functions": [
      75,
      95
    ],
    "branches": [
      75,
      95
    ],
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "text-summary",
      "text",
      "lcov",
      "clover",
      "html"
    ],
    "all": true,
    "report-dir": "./coverage"
  }
}
